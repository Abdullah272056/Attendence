<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:elevation="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/item_backgraound"
    android:weightSum="2"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#090909"
        android:layout_weight="1.6"
       android:textAlignment="center"
        android:id="@+id/classNameTextViewId"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="FirstSemester"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:gravity="right"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <View
            android:background="#2B2A2A"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/editImageViewId"
        android:src="@drawable/ic_baseline_edit_24_black"
        android:layout_weight=".3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</LinearLayout>
